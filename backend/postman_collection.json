{
	"info": {
		"_postman_id": "web-service-relay-collection",
		"name": "Web Service Relay - API Tests",
		"description": "Collection pour tester le Web Service Relay avec tous les endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Status et Informations",
			"item": [
				{
					"name": "Get Root Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/",
							"host": ["{{base_url}}"],
							"path": [""]
						}
					}
				},
				{
					"name": "Get Relay Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/status",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "status"]
						}
					}
				}
			]
		},
		{
			"name": "Gestion des Sociétés",
			"item": [
				{
					"name": "Get All Societes",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/societes",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "societes"]
						}
					}
				},
				{
					"name": "Get Societe Files",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/societe/{{societe}}/files",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "societe", "{{societe}}", "files"]
						}
					}
				}
			]
		},
		{
			"name": "Upload de Fichiers",
			"item": [
				{
					"name": "Upload JSON File",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/files/upload/{{societe}}",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "upload", "{{societe}}"]
						}
					}
				}
			]
		},
		{
			"name": "Download de Fichiers",
			"item": [
				{
					"name": "Download JSON File",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/download/{{societe}}/{{filename}}",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "download", "{{societe}}", "{{filename}}"]
						}
					}
				}
			]
		},
		{
			"name": "Synchronisation",
			"item": [
				{
					"name": "Sync Societe Files",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/sync/{{societe}}",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "sync", "{{societe}}"]
						}
					}
				}
			]
		},
		{
			"name": "Suppression",
			"item": [
				{
					"name": "Delete File",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/files/delete/{{societe}}/{{filename}}",
							"host": ["{{base_url}}"],
							"path": ["api", "files", "delete", "{{societe}}", "{{filename}}"]
						}
					}
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "societe",
			"value": "rsp-bgs",
			"type": "string"
		},
		{
			"key": "filename",
			"value": "comptes_global_annee_2023.json",
			"type": "string"
		}
	]
} 